---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import ClientLogos from "@components/clients-alt.astro";
import { Image } from "astro:assets";
import Aboutimg from "assets/about-img.jpg";
import Growth from "assets/icon-7.svg";
import Satisfaction from "assets/icon-8.svg";
import Members from "assets/icon-9.svg";
import Mission from "assets/mission.png";

import { getCollection } from "astro:content";

// Filter team entries with 'draft: false';
const teamMembers = await getCollection("team", ({ data }) => {
  return !data.draft;
});
---

<Layout title="About">
  <!--====================== About ======================-->
  <div class="py-24">
    <Container>
      <div class="z-10 mb-14">
        <h2
          class="text-primary-strong text-center text-3xl md:text-5xl font-bold">
          About Us
        </h2>
        <p
          class="text-center text-primary-strong font-medium text-lg leading-normal max-w-3xl mx-auto pt-8">
          Cariations of passages of Lorem Ipsum available, but the majority have
          suffered alteration in some form repeat predefined chunks. There are
          many variations of passages of Lorem Ipsum available, but the majority
          have suffered alteration in some form
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-14">
        <div class="col-span-2">
          <Image src={Aboutimg} alt="" class="w-full object-cover" />
        </div>
        <div class="flex flex-col gap-6">
          <div class="border rounded-xl py-6 px-10">
            <h3 class="text-primary-strong text-2xl font-semibold">
              Company Growth
            </h3>
            <div class="flex items-center gap-4 mt-2">
              <div
                class="bg-primary-soft rounded-full h-12 w-12 shrink-0 flex justify-center items-center">
                <Image src={Growth} alt="" />
              </div>

              <h3 class="text-primary text-6xl font-semibold">
                320<span class="text-primary-soft">%</span>
              </h3>
            </div>
          </div>
          <div class="border rounded-xl py-6 px-10">
            <h3 class="text-primary-strong text-2xl font-semibold">
              Customer Satisfaction
            </h3>
            <div class="flex items-center gap-4 mt-2">
              <div
                class="bg-primary-soft rounded-full h-12 w-12 shrink-0 flex justify-center items-center">
                <Image src={Satisfaction} alt="" />
              </div>

              <h3 class="text-primary text-6xl font-semibold">
                99<span class="text-primary-soft">%</span>
              </h3>
            </div>
          </div>
          <div class="border rounded-xl py-6 px-10">
            <h3 class="text-primary-strong text-2xl font-semibold">
              Team Members
            </h3>
            <div class="flex items-center gap-4 mt-2">
              <div
                class="bg-primary-soft rounded-full h-12 w-12 shrink-0 flex justify-center items-center">
                <Image src={Members} alt="" />
              </div>

              <h3 class="text-primary text-6xl font-semibold">
                108<span class="text-primary-soft">+</span>
              </h3>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </div>
  <!--//End About -->
  <!--====================== Agencies ======================-->
  <div class="py-24 bg-primary-soft">
    <Container>
      <div class="z-10 mb-14 mx-auto">
        <h2
          class="text-primary-strong text-center text-3xl md:text-5xl font-bold mb-14">
          Relied upon by over <br />
          300 agencies worldwide.
        </h2>
        <ClientLogos />
      </div>
    </Container>
  </div>
  <!--//End Agencies -->
  <!--====================== Mission vision ======================-->
  <div class="my-24">
    <Container>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
        <div>
          <Image src={Mission} alt="" />
        </div>
        <div>
          <h2
            class="text-primary-strong text-3xl md:text-5xl font-bold max-w-72">
            Our Mission and Vision
          </h2>
          <p
            class="text-primary-strong font-medium text-lg leading-normal max-w-4xl mx-auto pt-10">
            Cariations of passages of Lorem Ipsum available, but the majority
            have suffered alteration in some form repeat predefined chunks.
            There are many variations of passages of Lorem Ipsum available, but
            the majority have suffered alteration in some form
          </p>
        </div>
      </div>
    </Container>
  </div>
  <!--//End Mission vision -->
  <!--====================== Our team ======================-->
  <div>
    <Container>
      <div class="text-center pt-24 border-t">
        <h2
          class="text-primary-strong text-center text-3xl md:text-5xl font-bold">
          Our Team
        </h2>
      </div>
      <div class="grid md:grid-cols-3 gap-8 mt-14 pb-40">
        <!-- // Manage Team Members in ./content/team  -->
        {
          teamMembers.map((team) => (
            <div class="mx-auto md:mx-0">
              <Image
                src={team.data.avatar.src}
                alt={team.data.avatar.alt || "Team"}
              />
              <div class="mt-6">
                <h3 class="text-2xl font-semibold text-primary-strong">
                  {team.data.name}
                </h3>
                <p class="text-lg font-medium text-primary-medium">
                  {team.data.title}
                </p>
                <ul class="flex gap-3 mt-4">
                  <li>
                    <a
                      href={team.data?.social?.facebook || "#"}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="bg-primary-soft rounded-full h-8 w-8 flex justify-center items-center">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        version="1.1"
                        xmlns:xlink="http://www.w3.org/1999/xlink"
                        width="16"
                        height="16"
                        x="0"
                        y="0"
                        viewBox="0 0 155.139 155.139"
                        style="enable-background:new 0 0 512 512"
                        xml:space="preserve"
                        class="">
                        <g>
                          <path
                            d="M89.584 155.139V84.378h23.742l3.562-27.585H89.584V39.184c0-7.984 2.208-13.425 13.67-13.425l14.595-.006V1.08C115.325.752 106.661 0 96.577 0 75.52 0 61.104 12.853 61.104 36.452v20.341H37.29v27.585h23.814v70.761h28.48z"
                            style=""
                            fill="#00ac8a"
                            data-original="#010002"
                            class=""
                            opacity="1"
                          />
                        </g>
                      </svg>
                    </a>
                  </li>
                  <li>
                    <a
                      href={team.data?.social?.twitter || "#"}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="bg-primary-soft text-primary rounded-full h-8 w-8 flex justify-center items-center">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        fill="none"
                        viewBox="0 0 1200 1227">
                        <path
                          fill="currentColor"
                          d="M714.163 519.284 1160.89 0h-105.86L667.137 450.887 357.328 0H0l468.492 681.821L0 1226.37h105.866l409.625-476.152 327.181 476.152H1200L714.137 519.284h.026ZM569.165 687.828l-47.468-67.894-377.686-540.24h162.604l304.797 435.991 47.468 67.894 396.2 566.721H892.476L569.165 687.854v-.026Z"
                        />
                      </svg>
                    </a>
                  </li>

                  <li>
                    <a
                      href={team.data?.social?.linkedin || "#"}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="bg-primary-soft rounded-full h-8 w-8 flex justify-center items-center">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        version="1.1"
                        xmlns:xlink="http://www.w3.org/1999/xlink"
                        width="16"
                        height="16"
                        x="0"
                        y="0"
                        viewBox="0 0 24 24"
                        style="enable-background:new 0 0 512 512"
                        xml:space="preserve"
                        class="">
                        <g>
                          <g fill="#0077b5">
                            <path
                              d="M23.994 24v-.001H24v-8.802c0-4.306-.927-7.623-5.961-7.623-2.42 0-4.044 1.328-4.707 2.587h-.07V7.976H8.489v16.023h4.97v-7.934c0-2.089.396-4.109 2.983-4.109 2.549 0 2.587 2.384 2.587 4.243V24zM.396 7.977h4.976V24H.396zM2.882 0C1.291 0 0 1.291 0 2.882s1.291 2.909 2.882 2.909 2.882-1.318 2.882-2.909A2.884 2.884 0 0 0 2.882 0z"
                              fill="#00ac8a"
                              opacity="1"
                              data-original="#0077b5"
                              class=""
                            />
                          </g>
                        </g>
                      </svg>
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          ))
        }
      </div>
    </Container>
  </div>
  <!--//End Our team -->
</Layout>
