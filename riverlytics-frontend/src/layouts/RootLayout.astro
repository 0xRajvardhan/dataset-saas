---
import { SEO } from "astro-seo";
import "@fontsource-variable/rethink-sans";

export interface Props {
  title?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site,
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " ‚è§ " + "Riverlytics"
  : "Riverlytics - Smarter Datasets for Better Decisions";
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Riverlytics is a premium astro website template for businesses, startup and SaaS."
      canonical={canonicalURL}
      twitter={{
        creator: "@surjithctly",
        site: "@web3templates",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Riverlytics - Business, SaaS & Startup Template`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Riverlytics Homepage Screenshot",
        },
      }}
    />
  </head>
  <body class="font-sans antialiased min-h-full flex flex-col">
    <slot />
  </body>
</html>
